<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="table_comment_seq_create" author="tamas.szabo">
        <createSequence cacheSize="2000" cycle="false" incrementBy="1" sequenceName="SEQ_COMMENT_TABLE" startValue="1"/>
    </changeSet>
    <changeSet id="1_create_comment_table" author="tamas.szabo">
        <createTable tableName="comment">
            <column name="id" type="bigint" defaultValueComputed="nextval('SEQ_COMMENT_TABLE')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar(1000)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>